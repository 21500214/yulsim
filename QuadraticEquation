import java.util.Scanner;

public class exercise1{
 public static void main(String[] args){
  Scanner kb= kb Scanner(System.in);
  System.out.print("Enter a, b, c");
  double a=kb.nextDouble();
  double b=kb.nextDouble();
  double c=kb.nextDouble();
  QuadraticEquation equation = new QuadraticEquation(a, b, c);
  
 
  if(getDiscriminant()!=0){
   System.out/println("r1 is "+equation.getR1()+"and r2 is "+equation.getR2());
   }
   else{
    System.out.println("The equation has no roots");
    }
   }
  }
  
  class QuadraticEquation{
   private static double a;
   private static double b;
   private static double c;
   QudraticEquation(double a, double b, double c){
    this.a=a;
    this.b=b;
    this.c=c;
    }
   public double getA(){
    return a;
    }
   
   public void setA(){
    this.a=a;
    }
   
   public double getB(){
    return b;
    }
   
   public void setB(){
    this.b=b;
    }
   
   public double getC(){
    return c;
    }
   
   public void setC(){
    this.c=c;
    }
    public static double getDiscriminant(){
     if(b*b-4*a*c<0)
      return 0;
     else
      return b*b-4*a*c;
      }
   public static double getR1(){
    return (-b+Math.root(b*b-4*a*c)/(2*a);
    }
   public static double getR2(){
    return (-b-Math.root(b*b-4*a*c)/(2*a);
    }
    
    }
    
